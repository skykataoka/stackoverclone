
<!-- 質問一覧 タイトル、票、回答数を表示-->
<p id="notice"><%= notice %></p>

<h1>Listing Questions</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @questions.each do |question| %>
      <tr>
        <td><%= link_to question_path(question) do %>
        <h4><strong><%= question.title %></strong></h4></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<!-- 質問一覧end -->

<!-- 質問ボタン -->
<%= link_to 'New Question', new_question_path %>
<!-- 質問ボタンend -->
