<ul>
  <% answers.each do |answer| %>
    <% unless answer.id.nil? %>
      <li>
        <p class="left"><%= answer.user.name %>さんがコメントしました。</p>
        <p class="left"><%= answer.content %></p>
        <% if current_user.id == answer.user.id %>
          <p class="right">
            <%= link_to '', edit_blog_answer_path(blog, answer), class: "fa fa-pencil-square-o fa-lg" %>
            <%= link_to '', blog_answer_path(blog, answer), class: "fa fa-trash-o fa-lg", method: :delete, remote: true, data: { confirm: '本当に削除していいですか？' } %>
          </p>
        <% end %>
      </li>
    <% end %>
  <% end %>
</ul>
