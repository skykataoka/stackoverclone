
<p class="flash"><%= notice %><%= alert %></p>
<h1>全ての質問</h1>

  <%= link_to '新しい質問を投稿', new_question_path %>


  <% @questions.each do |question| %>

          <p>タイトル<%= link_to question.title, question %></p>
          <p>内容<%= question.content %></p>
          <%= link_to '詳細へ', question %>
          <!-- 作成者の質問の編集と破棄が可能　-->
          <% question.user.id == current_user.id %>
          <%= link_to 'Edit', edit_question_path(question) %>
            <%= link_to 'Destroy', question, method: :delete, data: { confirm: 'Are you sure?' } %>
      <% end %>
